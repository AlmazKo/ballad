{
  "compilerOptions": {
    "outDir": "./static/js",
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "traceResolution": true,
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./src",
    "target": "es2016",
    "lib": [ "es6", "dom"],
    "types": ["./promiser/types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
{
  "collectCoverageFrom" : ["src/**/*.{ts}"],
  "globals"             : {
    "__DEV__": true,
    "ts-jest": {
      "skipBabel"   : true,
      "tsConfigFile": "./jest-tsconfig.json"
    }
  },
  "moduleFileExtensions": [ "ts", "js"],
  "setupFiles"          : [],
  "testEnvironment"     : "node",
  "testMatch"           : [
    "<rootDir>/src/**/?(*.)(spec|test).(ts)",
    "<rootDir>/src/?(*.)(spec|test).(ts)"
  ],
  "transform"           : {
    "^.+\\.ts?$": "ts-jest"
  }
}